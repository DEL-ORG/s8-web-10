pipeline {
    agent any
    parameters {
        string(name: 'BRANCH_NAME', defaultValue: 's8victor', description: '')
        string(name: 'IMAGE_NAME', defaultValue: '', description: '')
        string(name: 'CONTAINER_NAME', defaultValue: '', description: '')
        string(name: 'PORT', defaultValue: '', description: '')
    }
    stages {
        stage('Clone Repository') {
            steps {
                script {
                    // Clone the repository using SSH with private key and checkout the specific branch
                    git credentialsId: 'jenkins-ssh-agents-private-key',
                        url: 'git@github.com:DEL-ORG/s8-web-2.git',
                        branch: "${params.BRANCH_NAME}"
                }
            }
        }
        stage('Checkout the code') {
            steps {
                script {
                    sh """
                    ls -l
                    """
                }
            }
        }
        stage('Build a Dockerfile') {
            steps {
                script {
                    sh """
                    docker build -t ${params.IMAGE_NAME} -f 001.Dockerfile .
                    docker images |grep ${params.IMAGE_NAME}
                    """
                }
            }
        }
        

         stage('DEPLOYMENT') {
            steps {
                script {
                    sh """
                     docker run -itd -p ${params.PORT}:80 --name ${params.CONTAINER_NAME} ${params.IMAGE_NAME} 
                    """
                }
            }
        }
        
}
}
